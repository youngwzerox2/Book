<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- *********************** dao interface 경로+이름 -->
<mapper namespace="com.example.dao.CommunityDAO">

	<!-- ******************************커뮤니티******************************** -->
	<!-- 커뮤니티 신고 전체 리스트 -->
	<select id="communityList" resultType="Community">
		SELECT *
		FROM complain
		ORDER BY complain_id DESC
	</select>

	<!-- 커뮤니티 상세정보 -->
	<select id="communityDetail" resultType="Community">
		SELECT *
		FROM complain
		WHERE complain_id=#{complain_id}
	</select>

	<!-- 커뮤니티정보수정 -->
	<update id="updateCommunity" parameterType="Community">
		UPDATE complain
		SET complain_done=#{complain_done}
		WHERE complain_id=#{complain_id}
	</update>

	

</mapper>
